{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "rootDirs": ["./src"],
        "esModuleInterop": true,
        "skipLibCheck": true,
        "strict": true,
        "moduleResolution": "node",
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
        }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
